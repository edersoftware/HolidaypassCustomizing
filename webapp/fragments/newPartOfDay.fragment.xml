<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Popover title="Neuer Tagesteil anlegen" class="sapUiContentPadding" placement="Auto" modal="true">
		<content>
			<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3"
				emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="Id"/>
					<Input type="Text" value="{NewPartOfDay>/id}"/>
					<Label text="Text Deutsch"/>
					<Input type="Text" value="{NewPartOfDay>/text_d}"/>
					<Label text="Text FranzÃ¶sisch (Nicht verwendet)"/>
					<Input type="Text" value="{NewPartOfDay>/text_f}"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Abbrechen" press="onCancelNewPartOfDay"/>
				<Button text="Speichern" press="onSaveNewPartOfDay"/>
			</Toolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>